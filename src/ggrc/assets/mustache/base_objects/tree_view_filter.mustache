  <div class="tree-filter tree-filter_paging">
    <div class="sticky-filter inner-filter-sticky">
      <div class="tree-filter__inline-filtering clearfix" {{ (el) -> el.ggrc_controllers_tree_filter() }} >

        <div class="tree-filter__fluid-wrap">
          <div class="tree-filter__input-wrap">
            <div class="tree-filter__expression-holder">
              <input name="filter_query" type="text" class="tree-filter__input tree-filter__input--wide">
              <span class="tree-filter__expression-holder__is-expression">
                <i class="fa fa-check-circle-o"></i>
              </span>
            </div>
          </div>
          <div class="tree-filter__button-wrap">
            <div class="tree-filter__button">
              <a id="page-help" class="popover-template" data-get-template="help/filters_helper_content" href="javascript://">
                <i class="fa fa-question-circle"></i>
              </a>
              <input type="reset" class="btn btn-small btn-white tree-filter__button__reset" name="" value="Reset">
              <input type="submit" class="btn btn-small btn-lightBlue" name="" value="Filter">
            </div>
          </div>
          <div class="tree-filter__status-wrap">
            {{#if statusFilterVisible}}
            <multiselect-dropdown
              {options}="filter_states"
              placeholder="Filter by State",
              plural="States">
            </multiselect-dropdown>
            {{/if}}
          </div>
          <div class="tree-filter__paging-wrap">
            <div class="tree-filter__paging">
                <tree-pagination paging="paging"></tree-pagination>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
