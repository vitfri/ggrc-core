<div class="comment-control">
  {{#if isSaving}}
    <spinner class="pull-right" toggle="isSaving"></spinner>
  {{else}}
    <label class="pull-left">
      <input type="checkbox" name="send_notification" can-value="comment.checked">
      Send Notifications
    </label>
    <button {{#if isEmpty}}disabled{{/if}} class="btn btn-green btn-small pull-right" can-click="save">Add</button>
  {{/if}}
</div>
