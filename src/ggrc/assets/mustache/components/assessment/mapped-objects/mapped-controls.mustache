<div class="section-title">
  {{titleText}}
  {{#is_allowed 'update' instance context='for'}}
      <i class="fa fa-plus-circle"
         rel="tooltip"
         data-type="{{mappingType}}"
         data-placement="right"
         data-toggle="unified-mapper"
         data-join-mapping="related_objects"
         data-join-option-type="{{model.shortName}}"
         data-join-object-id="{{instance.id}}"
         data-join-object-type="{{instance.class.shortName}}"
         data-original-title="Map {{firstnonempty mappingType 'Object'}} to this {{firstnonempty instance.class.title_singular 'Object'}}"
 >
      </i>
  {{/is_allowed}}
</div>
<object-list {(selected-item)}="selectedItem" {items}="mappedItems">
    <business-object-list-item {instance}="instance">
        <div class="description">
            <read-more {text}="itemData.description" max-text-length="90"></read-more>
        </div>
    </business-object-list-item>
</object-list>
<object-popover class="object-popover" {item}="selectedItem">
    <detailed-business-object-list-item {instance}="item.data" {^object-title}="popoverTitle" {^object-link}="popoverLink"></detailed-business-object-list-item>
    <assessment-mapped-controls-popover class="assessment-mapped-controls-popover" {instance-id}="item.data.id" {^perform-loading}="expanded"></assessment-mapped-controls-popover>
</object-popover>
